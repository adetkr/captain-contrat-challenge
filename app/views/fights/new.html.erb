<div class="container">
  <h1 class='text-center'>New Fight</h1>
  <%= form_for @fight do |f| %>
    <% if @fight.errors.any? %>
      <ul>
        <% @fight.errors.full_messages.each do |message| %>
          <li class="error-message"><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="row text-center" style="margin-bottom: 20px;">
      <% number = 0 %>
      <%= f.simple_fields_for :players do |player_form| %>
        <% number += 1 %>
        <h2>Player <%= number %></h2>
        <div class="field">
          <p>Character</p>
          <%= player_form.collection_select :character_id, Character.all, :id, :name %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="text-center">
        <%= f.submit 'START FIGHTING !', class: 'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>
